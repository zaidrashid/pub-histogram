{
    "name": "Publication Histogram",
    "version": "1.0.0",
    "description": "",
    "server": {
        "port": 8210
    },
    "build": {
        "root": ".build/",
        "js" : ".build/js",
        "jsFiles": ".build/js/*.js",
        "module": ".build/module",
        "moduleFiles": ".build/module/*.js",
        "css": ".build/css",
        "cssFiles": ".build/css/*.css",
        "index": ".build/index.html",
        "assetFolder": ".build/assets"
    },
    "dist": {
        "root": ".dist/",
        "index": ".dist/index.html",
        "jsFiles": ".dist/*.js",
        "cssFiles": ".dist/*.css"    
    },
    "src": {
        "root": "src",
        "index": "src/index.html",
        "jspackages": "src/assets/packages",
        "csspackages": "src/assets/css",
        "fontsfolder": "src/assets/fonts",
        "scss": "src/assets/scss/**/*.scss",
        "css": "src/assets/css/**/*.css",
        "html": [
            "src/**/*.html",
            "!src/index.html"
        ],
        "assets": [
            "src/assets/**/*",
            "!src/assets/js",
            "!src/assets/packages",
            "!src/assets/scss",
            "!src/assets/css",
            "!src/assets/js/**/*",
            "!src/assets/packages/**/*",
            "!src/assets/scss/**/*",
            "!src/assets/css/**/*"
        ]
    },
    "imports": {
        "modules": {
            "js": [
                "node_modules/angular/angular.js",
                "node_modules/angular-route/angular-route.js"
            ],
            "css": [],
            "fonts":[]
        },
        "js": [
            "src/mainController.js"
        ],
        "css": []
    }
}
