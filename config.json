{
    "name": "Publication Histogram",
    "version": "1.0.0",
    "description": "",
    "server": {
        "port": 8210
    },
    "build": {
        "root": ".build/",
        "js" : ".build/js",
        "jsFiles": ".build/js/*.js",
        "module": ".build/module",
        "moduleFiles": ".build/module/*.js",
        "css": ".build/css",
        "cssFiles": ".build/css/*.css",
        "fonts": ".build/fonts",
        "index": ".build/index.html",
        "assetFolder": ".build/assets"
    },
    "dist": {
        "root": "docs/",
        "index": "docs/index.html",
        "jsFiles": "docs/*.js",
        "cssFiles": "docs/*.css",
        "fonts": "docs/fonts"   
    },
    "src": {
        "root": "src",
        "index": "src/index.html",
        "jspackages": "src/assets/packages",
        "csspackages": "src/assets/css",
        "fontsfolder": "src/assets/fonts",
        "scss": "src/assets/scss/**/*.scss",
        "css": "src/assets/css/**/*.css",
        "html": [
            "src/**/*.html",
            "!src/index.html"
        ],
        "assets": [
            "src/assets/**/*",
            "!src/assets/js",
            "!src/assets/packages",
            "!src/assets/scss",
            "!src/assets/css",
            "!src/assets/js/**/*",
            "!src/assets/packages/**/*",
            "!src/assets/scss/**/*",
            "!src/assets/css/**/*"
        ]
    },
    "imports": {
        "modules": {
            "js": [
                "node_modules/angular/angular.js",
                "node_modules/angular-route/angular-route.js",
                "node_modules/angular-animate/angular-animate.js",                
                "node_modules/angular-sanitize/angular-sanitize.min.js",
                "node_modules/angular-ui-bootstrap/dist/ui-bootstrap-tpls.js"
            ],
            "css": [
                "node_modules/bootstrap/dist/css/bootstrap.min.css",
                "node_modules/angular-ui-bootstrap/dist/ui-bootstrap-csp.css"
            ],
            "fonts":[
                "node_modules/bootstrap/dist/fonts/glyphicons-halflings-regular.eot",
                "node_modules/bootstrap/dist/fonts/glyphicons-halflings-regular.svg",
                "node_modules/bootstrap/dist/fonts/glyphicons-halflings-regular.ttf",
                "node_modules/bootstrap/dist/fonts/glyphicons-halflings-regular.woff",
                "node_modules/bootstrap/dist/fonts/glyphicons-halflings-regular.woff2"
            ]
        },
        "js": [
            "src/mainModule.js",
            "src/mainRoute.js",
            "src/mainController.js",
            "src/components/**/*.js",
            "src/landing/**/*.js",
            ".build/js/templates.js"
        ],
        "css": []
    }
}
